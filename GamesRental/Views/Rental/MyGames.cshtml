@model IEnumerable<GamesRental.Web.ViewModels.Rental.RentalViewModel>

@{
    ViewData["Title"] = "My Rented Games";
}

<h2>My Rented Games</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You have no active rentals.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Platform</th>
                <th>Rented On</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rental in Model)
            {
                <tr>
                    <td><img src="@rental.ImageUrl" alt="@rental.GameTitle" style="height: 60px;" /></td>
                    <td>@rental.GameTitle</td>
                    <td>@rental.Platform</td>
                    <td>@rental.RentedOn.ToShortDateString()</td>
                    <td>
                        <form asp-action="Return" method="post">
                            <input type="hidden" name="rentalId" value="@rental.RentalId" />
                            <button type="submit" class="btn btn-warning btn-sm">Return</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

