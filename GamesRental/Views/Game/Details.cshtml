@model GamesRental.Web.ViewModels.Game.GameDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 300px;" />
    </div>
    <div class="col-md-6">
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Platform:</strong> @Model.Platform</p>
        <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
        <p>@Model.Description</p>

        <form asp-controller="Rental" asp-action="Rent" method="post">
            <input type="hidden" name="gameId" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Rent</button>
        </form>
    </div>
</div>

<hr />

<h4 class="mt-4">User Reviews</h4>

@if (!Model.Reviews.Any())
{
    <p>No reviews yet.</p>
}
else
{
    <ul class="list-group">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>@review.Username</strong> rated <strong>@review.Rating/5</strong>
                <span class="text-muted">(@review.CreatedOn.ToShortDateString())</span>
                <br />
                <p>@review.Comment</p>
            </li>
        }
    </ul>
}
