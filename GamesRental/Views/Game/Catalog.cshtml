@model IEnumerable<GamesRental.Web.ViewModels.Game.GameCatalogViewModel>

@{
    ViewData["Title"] = "Game Catalog";
}

<h2 class="mb-4">Available Games</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No games are currently available for rent.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var game in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@game.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Title</h5>
                        <p class="card-text mb-1">
                            <strong>Genre:</strong> @game.Genre<br />
                            <strong>Platform:</strong> @game.Platform<br />
                            <strong>Released:</strong> @game.AvailableCopies
                        </p>
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@game.Id" class="btn btn-primary mt-auto">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
