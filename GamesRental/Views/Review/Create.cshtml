@model GamesRental.Web.ViewModels.Review.ReviewFormViewModel

@{
    ViewData["Title"] = "Add Review";
}

<h2>Add Review</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="GameId" />

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">-- Select rating --</option>
            @for (int i = 1; i <= 5; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Comment" class="form-label"></label>
        <textarea asp-for="Comment" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Submit Review</button>
</form>
